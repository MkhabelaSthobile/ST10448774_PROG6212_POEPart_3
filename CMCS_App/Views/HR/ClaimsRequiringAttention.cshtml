@model IEnumerable<CMCS_App.Models.Claim>

@{
    ViewData["Title"] = "Claims Requiring Attention";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <h2 class="text-warning">
                <i class="fas fa-exclamation-circle"></i> Claims Requiring Attention
            </h2>
            <p class="text-muted">Review claims that are approved by managers and ready for payment processing</p>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to Dashboard
            </a>
        </div>
    </div>

    <!-- Statistics -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title">@Model.Count()</h5>
                    <p class="card-text">Claims Ready for Payment</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title">R @Model.Sum(c => c.TotalAmount).ToString("N2")</h5>
                    <p class="card-text">Total Payment Amount</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h5 class="card-title">@Model.Select(c => c.LecturerID).Distinct().Count()</h5>
                    <p class="card-text">Unique Lecturers</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Claims Table -->
    <div class="card shadow-sm">
        <div class="card-header bg-warning text-dark">
            <h5 class="mb-0"><i class="fas fa-list"></i> Approved Claims Ready for Payment</h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-hover align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th>Claim ID</th>
                                <th>Lecturer</th>
                                <th>Email</th>
                                <th>Module</th>
                                <th>Month</th>
                                <th>Hours</th>
                                <th>Rate</th>
                                <th>Total Amount</th>
                                <th>Submission Date</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in Model.OrderBy(c => c.Month).ThenBy(c => c.Lecturer.FullName))
                            {
                                <tr>
                                    <td><strong>#@claim.ClaimID</strong></td>
                                    <td>@claim.Lecturer?.FullName</td>
                                    <td>
                                        <a href="mailto:@claim.Lecturer?.Email">@claim.Lecturer?.Email</a>
                                    </td>
                                    <td>@claim.Lecturer?.ModuleName</td>
                                    <td><span class="badge bg-secondary">@claim.Month</span></td>
                                    <td>@claim.HoursWorked hrs</td>
                                    <td>R @claim.HourlyRate.ToString("N2")</td>
                                    <td><strong class="text-success">R @claim.TotalAmount.ToString("N2")</strong></td>
                                    <td>@claim.SubmissionDate.ToString("dd MMM yyyy")</td>
                                    <td><span class="badge bg-success">@claim.Status</span></td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="table-light">
                            <tr>
                                <th colspan="7" class="text-end">TOTAL PAYMENT DUE:</th>
                                <th colspan="3" class="text-success">
                                    <h5 class="mb-0">R @Model.Sum(c => c.TotalAmount).ToString("N2")</h5>
                                </th>
                            </tr>
                        </tfoot>
                    </table>
                </div>

                <!-- Action Buttons -->
                <div class="mt-4 d-flex gap-2">
                    <button type="button" class="btn btn-success btn-lg" data-bs-toggle="modal" data-bs-target="#batchPaymentModal">
                        <i class="fas fa-money-check-alt"></i> Process All Payments
                    </button>
                    <button type="button" class="btn btn-primary" onclick="window.print()">
                        <i class="fas fa-print"></i> Print Report
                    </button>
                    <a asp-action="ExportToCSV" asp-route-reportType="claims" class="btn btn-info">
                        <i class="fas fa-download"></i> Export to CSV
                    </a>
                </div>
            }
            else
            {
                <div class="text-center text-muted py-5">
                    <i class="fas fa-check-circle fa-3x mb-3 text-success"></i>
                    <h5>All caught up!</h5>
                    <p>No claims requiring immediate attention at this time.</p>
                </div>
            }
        </div>
    </div>

    <!-- Group by Month -->
    @if (Model.Any())
    {
        <div class="card shadow-sm mt-4">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0"><i class="fas fa-calendar"></i> Payment Summary by Month</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead class="table-dark">
                            <tr>
                                <th>Month</th>
                                <th>Number of Claims</th>
                                <th>Number of Lecturers</th>
                                <th>Total Amount</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var monthGroup in Model.GroupBy(c => c.Month))
                            {
                                <tr>
                                    <td><strong>@monthGroup.Key</strong></td>
                                    <td>@monthGroup.Count() claims</td>
                                    <td>@monthGroup.Select(c => c.LecturerID).Distinct().Count() lecturers</td>
                                    <td><strong class="text-success">R @monthGroup.Sum(c => c.TotalAmount).ToString("N2")</strong></td>
                                    <td>
                                        <form asp-action="ProcessBatchPayment" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="month" value="@monthGroup.Key" />
                                            <button type="submit" class="btn btn-sm btn-success"
                                                    onclick="return confirm('Process payment for all @monthGroup.Count() claims in @monthGroup.Key?')">
                                                <i class="fas fa-check"></i> Process Month
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

<!-- Batch Payment Modal -->
<div class="modal fade" id="batchPaymentModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title">
                    <i class="fas fa-money-check-alt"></i> Confirm Batch Payment
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle"></i>
                    <strong>Warning:</strong> This will process payments for ALL approved claims shown above.
                </div>
                <div class="mb-3">
                    <h6>Payment Summary:</h6>
                    <ul>
                        <li>Total Claims: <strong>@Model.Count()</strong></li>
                        <li>Total Lecturers: <strong>@Model.Select(c => c.LecturerID).Distinct().Count()</strong></li>
                        <li>Total Amount: <strong class="text-success">R @Model.Sum(c => c.TotalAmount).ToString("N2")</strong></li>
                    </ul>
                </div>
                <p>Are you sure you want to proceed with batch payment processing?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-success" onclick="alert('Batch payment functionality would be integrated with payment gateway in production.')">
                    <i class="fas fa-check"></i> Confirm Payment
                </button>
            </div>
        </div>
    </div>
</div>

<style>
    @@media print {
        .btn, .card-header, nav, footer {
            display: none !important;
        }
    }
</style>