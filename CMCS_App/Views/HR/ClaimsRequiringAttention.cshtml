@model IEnumerable<CMCS_App.Models.Claim>

@{
    ViewData["Title"] = "All Claims Overview";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <h2 class="text-primary">
                <i class="fas fa-list-alt"></i> All Claims Overview
            </h2>
            <p class="text-muted">Complete view of all submitted claims across all statuses</p>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to Dashboard
            </a>
        </div>
    </div>

    <!-- Statistics -->
    <div class="row mb-4">
        <div class="col-md-2">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h5 class="card-title">@Model.Count()</h5>
                    <p class="card-text mb-0">Total Claims</p>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card bg-warning text-dark">
                <div class="card-body">
                    <h5 class="card-title">@Model.Count(c => c.Status == "Submitted")</h5>
                    <p class="card-text mb-0">Submitted</p>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title">@Model.Count(c => c.Status == "Approved by Coordinator")</h5>
                    <p class="card-text mb-0">Coord. Approved</p>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title">@Model.Count(c => c.Status == "Approved by Manager")</h5>
                    <p class="card-text mb-0">Mgr. Approved</p>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card bg-danger text-white">
                <div class="card-body">
                    <h5 class="card-title">@Model.Count(c => c.Status.Contains("Rejected"))</h5>
                    <p class="card-text mb-0">Rejected</p>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card bg-dark text-white">
                <div class="card-body">
                    <h5 class="card-title">R @Model.Sum(c => c.TotalAmount).ToString("N2")</h5>
                    <p class="card-text mb-0">Total Value</p>
                </div>
            </div>
        </div>
    </div>

    <!-- All Claims Table -->
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="fas fa-th-list"></i> All Claims in System</h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-hover align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th>Claim ID</th>
                                <th>Lecturer</th>
                                <th>Email</th>
                                <th>Module</th>
                                <th>Month</th>
                                <th>Hours</th>
                                <th>Rate</th>
                                <th>Total Amount</th>
                                <th>Submission Date</th>
                                <th>Status</th>
                                <th>Document</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in Model.OrderByDescending(c => c.SubmissionDate))
                            {
                                <tr>
                                    <td><strong>#@claim.ClaimID</strong></td>
                                    <td>@claim.Lecturer?.FullName</td>
                                    <td>
                                        <small>@claim.Lecturer?.Email</small>
                                    </td>
                                    <td>@claim.ModuleName</td>
                                    <td>@claim.Month</td>
                                    <td>@claim.HoursWorked hrs</td>
                                    <td>R @claim.HourlyRate.ToString("N2")</td>
                                    <td><strong class="text-success">R @claim.TotalAmount.ToString("N2")</strong></td>
                                    <td>@claim.SubmissionDate.ToString("dd MMM yyyy")</td>
                                    <td>
                                        @if (claim.Status == "Submitted")
                                        {
                                            <span class="badge bg-warning text-dark">@claim.Status</span>
                                        }
                                        else if (claim.Status == "Approved by Coordinator")
                                        {
                                            <span class="badge bg-primary">@claim.Status</span>
                                        }
                                        else if (claim.Status == "Approved by Manager")
                                        {
                                            <span class="badge bg-success">@claim.Status</span>
                                        }
                                        else if (claim.Status.Contains("Rejected"))
                                        {
                                            <span class="badge bg-danger">@claim.Status</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@claim.Status</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(claim.SupportingDocument))
                                        {
                                            <i class="fas fa-file text-success"></i>
                                        }
                                        else
                                        {
                                            <i class="fas fa-times text-muted"></i>
                                        }
                                    </td>
                                </tr>
                                @if (!string.IsNullOrEmpty(claim.RejectionReason))
                                {
                                    <tr class="table-danger">
                                        <td colspan="11">
                                            <small><strong>Rejection Reason:</strong> @claim.RejectionReason</small>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                        <tfoot class="table-light">
                            <tr>
                                <th colspan="7" class="text-end">TOTAL:</th>
                                <th colspan="4" class="text-success">
                                    <h5 class="mb-0">R @Model.Sum(c => c.TotalAmount).ToString("N2")</h5>
                                </th>
                            </tr>
                        </tfoot>
                    </table>
                </div>

                <!-- Action Buttons -->
                <div class="mt-4 d-flex gap-2">
                    <button type="button" class="btn btn-primary" onclick="window.print()">
                        <i class="fas fa-print"></i> Print Report
                    </button>
                    <a asp-action="ExportToCSV" asp-route-reportType="claims" class="btn btn-success">
                        <i class="fas fa-download"></i> Export to CSV
                    </a>
                    <a asp-action="GeneratePaymentSummary" asp-route-month="" class="btn btn-info" target="_blank">
                        <i class="fas fa-file-alt"></i> Generate Summary
                    </a>
                </div>
            }
            else
            {
                <div class="text-center text-muted py-5">
                    <i class="fas fa-inbox fa-3x mb-3"></i>
                    <h5>No claims in the system</h5>
                    <p>Claims will appear here once lecturers submit them.</p>
                </div>
            }
        </div>
    </div>

    <!-- Claims by Status Breakdown -->
    @if (Model.Any())
    {
        <div class="row mt-4">
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0"><i class="fas fa-chart-pie"></i> Claims by Status</h5>
                    </div>
                    <div class="card-body">
                        <table class="table table-sm">
                            <tr>
                                <td><span class="badge bg-warning">Submitted</span></td>
                                <td>@Model.Count(c => c.Status == "Submitted") claims</td>
                                <td>R @Model.Where(c => c.Status == "Submitted").Sum(c => c.TotalAmount).ToString("N2")</td>
                            </tr>
                            <tr>
                                <td><span class="badge bg-primary">Approved by Coordinator</span></td>
                                <td>@Model.Count(c => c.Status == "Approved by Coordinator") claims</td>
                                <td>R @Model.Where(c => c.Status == "Approved by Coordinator").Sum(c => c.TotalAmount).ToString("N2")</td>
                            </tr>
                            <tr>
                                <td><span class="badge bg-success">Approved by Manager</span></td>
                                <td>@Model.Count(c => c.Status == "Approved by Manager") claims</td>
                                <td>R @Model.Where(c => c.Status == "Approved by Manager").Sum(c => c.TotalAmount).ToString("N2")</td>
                            </tr>
                            <tr>
                                <td><span class="badge bg-danger">Rejected</span></td>
                                <td>@Model.Count(c => c.Status.Contains("Rejected")) claims</td>
                                <td>R @Model.Where(c => c.Status.Contains("Rejected")).Sum(c => c.TotalAmount).ToString("N2")</td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0"><i class="fas fa-users"></i> Claims by Lecturer</h5>
                    </div>
                    <div class="card-body">
                        <table class="table table-sm">
                            @foreach (var lecturerGroup in Model.GroupBy(c => c.Lecturer?.FullName).OrderByDescending(g => g.Sum(c => c.TotalAmount)))
                            {
                                <tr>
                                    <td><strong>@lecturerGroup.Key</strong></td>
                                    <td>@lecturerGroup.Count() claims</td>
                                    <td>R @lecturerGroup.Sum(c => c.TotalAmount).ToString("N2")</td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    @@media print {
        .btn, .card-header, nav, footer {
            display: none !important;
        }
    }
</style>