@model CMCS_App.Models.Claim

@{
    ViewData["Title"] = "Claim Details - Coordinator";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-info">Claim Details - Review</h2>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Dashboard
        </a>
    </div>

    <!-- Status Alert -->
    <div class="alert @GetStatusAlertClass(Model.Status)" role="alert">
        <h5 class="alert-heading">
            <i class="fas @GetStatusIcon(Model.Status)"></i> Current Status: @Model.Status
        </h5>
        @if (!string.IsNullOrEmpty(Model.RejectionReason))
        {
            <hr>
            <p class="mb-0">
                <strong>Rejection Reason:</strong><br />
                <span class="text-danger">@Model.RejectionReason</span>
            </p>
        }
    </div>

    <!-- Claim Information Card -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0"><i class="fas fa-file-invoice"></i> Claim Information</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <table class="table table-borderless">
                        <tr>
                            <th width="40%">Claim ID:</th>
                            <td><strong>#@Model.ClaimID</strong></td>
                        </tr>
                        <tr>
                            <th>Lecturer Name:</th>
                            <td><strong>@Model.Lecturer?.FullName</strong></td>
                        </tr>
                        <tr>
                            <th>Lecturer Email:</th>
                            <td>@Model.Lecturer?.Email</td>
                        </tr>
                        <tr>
                            <th>Module Name:</th>
                            <td>@Model.ModuleName</td>
                        </tr>
                        <tr>
                            <th>Month:</th>
                            <td>@Model.Month</td>
                        </tr>
                        <tr>
                            <th>Submission Date:</th>
                            <td>@Model.SubmissionDate.ToString("dd MMMM yyyy HH:mm")</td>
                        </tr>
                    </table>
                </div>
                <div class="col-md-6">
                    <table class="table table-borderless">
                        <tr>
                            <th width="40%">Hours Worked:</th>
                            <td><strong class="text-primary">@Model.HoursWorked hours</strong></td>
                        </tr>
                        <tr>
                            <th>Hourly Rate:</th>
                            <td>R @Model.HourlyRate.ToString("N2")</td>
                        </tr>
                        <tr>
                            <th>Total Amount:</th>
                            <td><h4 class="text-success mb-0">R @Model.TotalAmount.ToString("N2")</h4></td>
                        </tr>
                        <tr>
                            <th>Current Status:</th>
                            <td>
                                <span class="badge @GetStatusBadgeClass(Model.Status) fs-6">
                                    @Model.Status
                                </span>
                            </td>
                        </tr>
                    </table>

                    <!-- Calculation Breakdown -->
                    <div class="alert alert-light border mt-3">
                        <h6><i class="fas fa-calculator"></i> Calculation:</h6>
                        <p class="mb-0">
                            @Model.HoursWorked hours × R @Model.HourlyRate.ToString("N2") = <strong>R @Model.TotalAmount.ToString("N2")</strong>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Supporting Document Card -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-secondary text-white">
            <h5 class="mb-0"><i class="fas fa-paperclip"></i> Supporting Document</h5>
        </div>
        <div class="card-body">
            @if (!string.IsNullOrEmpty(Model.SupportingDocument))
            {
                <div class="d-flex align-items-center">
                    <i class="fas fa-file-pdf fa-3x text-danger me-3"></i>
                    <div>
                        <h6 class="mb-1">@Model.SupportingDocument</h6>
                        <p class="text-muted mb-2">Review this document before making a decision</p>
                        <a asp-action="DownloadDocument" asp-route-claimId="@Model.ClaimID"
                           asp-route-fileName="@Model.SupportingDocument"
                           class="btn btn-primary">
                            <i class="fas fa-download"></i> Download & Review
                        </a>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-warning mb-0">
                    <i class="fas fa-exclamation-triangle"></i>
                    <strong>No supporting document provided.</strong>
                    Consider this when reviewing the claim.
                </div>
            }
        </div>
    </div>

    <!-- Action Buttons -->
    @if (Model.Status == "Submitted" || Model.Status == "Pending")
    {
        <div class="card shadow-sm border-warning">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0"><i class="fas fa-tasks"></i> Review Actions</h5>
            </div>
            <div class="card-body">
                <p class="mb-3">Please review the claim details and supporting documents before making a decision.</p>
                <div class="btn-group" role="group">
                    <form asp-action="Approve" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.ClaimID" />
                        <button type="submit" class="btn btn-success btn-lg"
                                onclick="return confirm('Are you sure you want to APPROVE this claim? It will be forwarded to the Academic Manager for final verification.')">
                            <i class="fas fa-check"></i> Approve Claim
                        </button>
                    </form>
                    <button type="button" class="btn btn-danger btn-lg ms-2"
                            data-bs-toggle="modal" data-bs-target="#rejectModal">
                        <i class="fas fa-times"></i> Reject Claim
                    </button>
                    <form asp-action="DeleteClaim" method="post" class="d-inline ms-2">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.ClaimID" />
                        <button type="submit" class="btn btn-outline-danger btn-lg"
                                onclick="return confirm('Are you sure you want to DELETE this claim? This action cannot be undone.')">
                            <i class="fas fa-trash"></i> Delete Claim
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Rejection Modal -->
        <div class="modal fade" id="rejectModal" tabindex="-1">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header bg-danger text-white">
                        <h5 class="modal-title"><i class="fas fa-times-circle"></i> Reject Claim #@Model.ClaimID</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                    </div>
                    <form asp-action="Reject" method="post">
                        @Html.AntiForgeryToken()
                        <div class="modal-body">
                            <input type="hidden" name="id" value="@Model.ClaimID" />
                            <div class="alert alert-warning">
                                <i class="fas fa-exclamation-triangle"></i>
                                <strong>Important:</strong> Please provide a clear and detailed reason for rejection.
                                This will be visible to the lecturer.
                            </div>
                            <div class="mb-3">
                                <label for="rejectionReason" class="form-label">
                                    Reason for Rejection <span class="text-danger">*</span>
                                </label>
                                <textarea class="form-control" id="rejectionReason"
                                      name="rejectionReason" rows="5" required
                                      placeholder="Example: Hours worked exceed maximum allowed for this module, or supporting documentation is incomplete..."></textarea>
                                <div class="form-text">
                                    Be specific about what needs to be corrected.
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                <i class="fas fa-times"></i> Cancel
                            </button>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-check"></i> Confirm Rejection
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i>
            This claim has already been reviewed and no further actions are available.
        </div>
    }
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Auto-focus on rejection reason textarea when modal opens
            var rejectModal = document.getElementById('rejectModal');
            if (rejectModal) {
                rejectModal.addEventListener('shown.bs.modal', function() {
                    document.getElementById('rejectionReason').focus();
                });
            }
        });
    </script>
}

@functions {
    public string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Submitted" or "Pending" => "bg-warning text-dark",
            "Approved by Coordinator" => "bg-success",
            "Approved by Manager" => "bg-success",
            _ when status.Contains("Rejected") => "bg-danger",
            _ => "bg-secondary"
        };
    }

    public string GetStatusAlertClass(string status)
    {
        return status switch
        {
            "Submitted" or "Pending" => "alert-warning",
            "Approved by Coordinator" => "alert-info",
            "Approved by Manager" => "alert-success",
            _ when status.Contains("Rejected") => "alert-danger",
            _ => "alert-secondary"
        };
    }

    public string GetStatusIcon(string status)
    {
        return status switch
        {
            "Submitted" or "Pending" => "fa-clock",
            "Approved by Coordinator" => "fa-check-circle",
            "Approved by Manager" => "fa-check-double",
            _ when status.Contains("Rejected") => "fa-times-circle",
            _ => "fa-info-circle"
        };
    }
}